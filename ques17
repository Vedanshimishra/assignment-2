#include <iostream>
using namespace std;

int main(int argc, char** argv) {
    int n;
    cin >> n;

    // Check if n is odd
    if (n % 2 == 0) {
        cout << "Invalid input. Please enter an odd number." << endl;
        return 1; // Return an error code
    }

    // Print the pattern
    for (int i = 1; i <= n; ++i) {
        // Print spaces for the upper part of the pattern
        for (int j = 1; j <= n - i; ++j) {
            cout << "\t";
        }

        // Print '*' for the current row
        for (int j = 1; j <= 2 * i - 1; ++j) {
            cout << "*\t";
        }

        cout << endl;
    }

    return 0; // Return success code
}

#include <iostream>
using namespace std;

int main(int argc, char** argv) {
    int n;
    cin >> n;

    // Check if n is odd
    if (n % 2 == 0) {
        cout << "Invalid input. Please enter an odd number." << endl;
        return 1; // Return an error code
    }

    // Print the pattern
    for (int i = 1; i <= n; ++i) {
        // Print '*' for the current row
        for (int j = 1; j <= n; ++j) {
            if (i == (n + 1) / 2 || j == (n + 1) / 2 || i + j == (n + 1) || i == j) {
                cout << "*\t";
            } else {
                cout << "\t";
            }
        }
        cout << endl;
    }

    return 0; // Return success code
}

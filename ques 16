#include <iostream>
using namespace std;

int main(int argc, char** argv) {
    int n;
    cin >> n;

    // Print the pattern
    for (int i = 1; i <= n; ++i) {
        // Print numbers in increasing order
        for (int j = 1; j <= i; ++j) {
            cout << j << "\t";
        }

        // Print spaces for the middle part of the pattern
        for (int j = 1; j <= 2 * (n - i); ++j) {
            cout << "\t";
        }

        // Print numbers in decreasing order
        for (int j = i; j >= 1; --j) {
            if (j != n) { // To avoid printing the last number twice
                cout << j << "\t";
            }
        }

        cout << endl;
    }

    return 0; // Return success code
}
